{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["es2023", "dom"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "baseUrl": "./src",
    "paths": {}
  },
  "include": ["src/**/*", "dist"],
  "exclude": ["node_modules"]
}
